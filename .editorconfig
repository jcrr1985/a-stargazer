# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space # "useTabs": false,
indent_size = 2 # "tabWidth": 2,
end_of_line = lf # "endOfLine": "lf",
insert_final_newline = true
trim_trailing_whitespace = true # "trailingComma": "es5",

[*.ts]
quote_type = single # "singleQuote": true,

[*.md]
max_line_length = off
trim_trailing_whitespace = false
